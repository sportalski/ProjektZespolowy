@using Microsoft.AspNet.Identity
@model MVCProj.Models.ManageUserViewModel

<div class="row">
    <section id="loginForm" class="register-form-section col-md-12 text-center">
        @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="text-center">Formularz zmiany hasła</h4>
            <p class="text-center">Jesteś zalogowany jako <strong>@User.Identity.GetUserName()</strong>.</p>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-offset-2 col-md-2 control-label section-text" })
                <div class="col-md-6">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-offset-2 col-md-2 control-label section-text" })
                <div class="col-md-6">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-offset-2 col-md-2 control-label section-text" })
                <div class="col-md-6">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Zmień hasło" class="btn btn-default" />
                </div>
            </div>
        }
    </section>
</div>